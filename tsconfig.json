{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports":true,
    "strictNullChecks": false,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}